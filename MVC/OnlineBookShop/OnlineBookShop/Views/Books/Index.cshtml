
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Book> 

<div class="row">
    <div class="col-6">
        <h4>All Available Books</h4>
    </div>
    <div class="col-6">
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary" >Create new Book</a>
    </div>
</div>


<div class="row">
    <div class="col-12">
        
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Book Id
                </th>
                <th>
                    Book Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    Actions
                </th>
                <th>
                    
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Id
                    </td>
                    <td width="30%">
                        @item.Title
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td width="15%">
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    </td>
                    <td width="15%">
                       
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

