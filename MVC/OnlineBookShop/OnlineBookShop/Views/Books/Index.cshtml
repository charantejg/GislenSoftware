
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Book> 

<h1>Index</h1>

<div class="row">
    <div class="col-12">
        
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Book Id
                </th>
                <th>
                    Book Name
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.Id
                    </td>
                    <td width="80%">
                        @item.Title
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

