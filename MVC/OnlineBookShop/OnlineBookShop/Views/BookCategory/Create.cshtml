
@{
    ViewData["Title"] = "Create";
}
@model BookCategory
<h1>Create</h1>

<form method="post" asp-action="Create">
  
    <div class="form-group row">
        <h3>Add a new Category</h3>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="CategoryName" />
               
                </div>
            </div>
           
            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>

