
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<BookCategory>

<h1>Categories</h1>


<div class="row">
    <div class="col-6">
        <h4>All Available Category</h4>
    </div>
    <div class="col-6">
        <a asp-controller="BookCategory" asp-action="Create" class="btn btn-primary">Create new Book</a>
    </div>
</div>


<div class="row">
    <div class="col-12">

        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Category Id
                    </th>
                    <th>
                        Category Name
                    </th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="10%">
                            @item.Id
                        </td>
                        <td width="30%">
                            @item.CategoryName
                        </td>
                        

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



